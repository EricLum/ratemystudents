<div class='container'>
<% if flash[:error] %>
<label>Form could not be submitted due to: </label>
  <% flash[:error].each do |err|%>
    <li><%= err %></li>
  <% end %>
<% end %>
<h3>Rate your Student!</h3><br>
<%= form_for @rating do |f| %>
<%= f.label :discipline %>
<%= f.number_field :discipline %>

<%= f.label :learning_style, "Learning Style" %>
<%= f.text_field :learning_style %>

<%= f.label :grit %>
<%= f.number_field :grit %>

<%= f.label :gpa, "GPA" %>
<%= f.number_field :gpa, class: :text_field, step: 0.1 %>

<%= f.label :subject %>
<%= f.text_field :subject %><br>

<br><%= f.label :student, "Select a Student" %><br>
<%= f.collection_check_boxes :student_ids, @students, :id, :name %><br>

<br><%= f.label :student, "Or Write your own Student" %>
<%= f.fields_for :students, @rating.students.build do |student_fields| %><br>
    <%= student_fields.text_field :name, placeholder: "Write a Name" %><br>
  <% end %><br>

<%= f.submit %>

<% end %>
</div>
